<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.knowledge.KnowledgeActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/knowledge_toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/knowledge_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:navigationIcon="@drawable/ic_arrow_back_black_24dp"
            app:title="@string/tab_corona_knowledge"/>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        app:layout_constraintTop_toBottomOf="@id/knowledge_toolbar_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/Theme.MaterialComponents.Light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">
                    <ImageView
                        android:id="@+id/entity_avatar"
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        android:layout_marginEnd="8dp"
                        android:minWidth="100dp"
                        android:maxWidth="100dp"
                        android:maxHeight="120dp"
                        android:minHeight="120dp"
                        android:scaleType="fitCenter"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/entity_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/entity_name"
                            android:layout_marginBottom="10dp"
                            android:layout_marginHorizontal="6dp"
                            style="@style/ScholarName"/>
                        <TextView
                            android:id="@+id/entity_brief"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/entity_brief"
                            android:layout_marginHorizontal="6dp"
                            style="@style/ScholarPosition"/>
                    </LinearLayout>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/entity_description"
                style="@style/ScholarTitle"/>
            <TextView
                android:id="@+id/entity_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ScholarContent"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/entity_relation"
                style="@style/ScholarTitle"/>
            <LinearLayout
                android:id="@+id/entity_relation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                style="@style/ScholarContent"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/entity_property"
                style="@style/ScholarTitle"/>
            <LinearLayout
                android:id="@+id/entity_property"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                style="@style/ScholarContent"/>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
